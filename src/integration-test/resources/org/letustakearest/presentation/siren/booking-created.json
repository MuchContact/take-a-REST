{
    "class": ["booking"],
    "properties": {
        "hotel": "Premier Palace",
        "city": "Kyiv",
        "roomType": "ROOM",
        "price": 1000,
        "paid": false,
        "from": [2014, 8, 1],
        "to": [2014, 8, 15],
        "includeBreakfast": true
    },
    "actions": [
        {
            "name": "update",
            "method": "PUT",
            "href": "$bookingURI",
            "class": ["booking"],
            "fields": [
                {
                    "name": "data.from",
                    "type": "DATE",
                    "required": false
                },
                {
                    "name": "data.to",
                    "type": "DATE",
                    "required": false
                },
                {
                    "name": "data.includeBreakfast",
                    "type": "CHECKBOX",
                    "required": false
                }
            ]
        },
        {
            "name": "pay",
            "method": "POST",
            "href": "$bookingURI/payment",
            "type": "application/json",
            "fields": [
                {
                    "name": "cardholdersName",
                    "type": "TEXT",
                    "required": false
                },
                {
                    "name": "creditCardNumber",
                    "type": "TEXT",
                    "required": false
                },
                {
                    "name": "cvv",
                    "type": "NUMBER",
                    "required": false
                }
            ],
            "class": ["payment"]
        },
        {
            "name": "cancel",
            "method": "DELETE",
            "href": "$bookingURI",
            "class": ["booking"]
        }
    ],
    "links": [
        {
            "rel": ["self"],
            "href": "$bookingURI"
        },
        {
            "rel": ["hotel"],
            "href": "$baseURI/api/hotels/3"
        }
    ]
}
